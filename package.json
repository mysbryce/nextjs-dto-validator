{
  "name": "nextjs-dto-validator",
  "version": "1.0.4",
  "description": "TypeScript DTO validation library for Next.js API routes",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "rimraf lib && tsc && node scripts/build.js",
    "build:simple": "rimraf lib && tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "nextjs",
    "dto",
    "validation",
    "typescript",
    "api",
    "request-validation"
  ],
  "author": "Kittichai Mala-In <fx.frame009@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mysbryce/nextjs-dto-validator.git"
  },
  "bugs": {
    "url": "https://github.com/mysbryce/nextjs-dto-validator/issues"
  },
  "homepage": "https://github.com/mysbryce/nextjs-dto-validator#readme",
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
